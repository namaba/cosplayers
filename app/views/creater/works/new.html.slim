scss:
  .icon {
    font-size: 20px;
  }
.container.pt-4
  .col-md-8.mx-auto
    .card
      .card-header.text-center
        h4.font-weight-bold.mb-0 作品投稿
      .card-body.col-md-7.mx-auto
        = form_with model: [:creater, @work], local: true do |f|
          = f.hidden_field :request_id
          #photos.field.mb-2
            = f.fields_for :photos do |p|
              = render 'photo_fields', f: p
            .links.text-center.mt-5
              = link_to_add_association f, :photos, class: 'btn btn-primary' do
                .d-flex.align-items-center
                  i.material-icons.icon add
                  span 写真追加
          .text-center= f.submit '保存', class: 'btn btn-success btn-raised  w-100'
